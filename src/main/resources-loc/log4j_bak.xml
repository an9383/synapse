<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	
	 <!-- By Date Log File Create(All) -->
    <appender name="rollingFile" class="org.apache.log4j.DailyRollingFileAppender">
    	<!-- Local or Real Windows  -->
        <param name="File" value="C:/LOG/dalim/all.log"/>
        <param name="Append" value="true"/>
        <!-- param name="MaxFileSize" value="100MB"/ -->
        <!-- param name="MaxBackupIndex" value="2"></param -->
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p [%C{10}] %m [%X{userId}]%n" />
        </layout>  
    </appender>
     
    <!-- By Date Log File Create(Spring) --> 
    <appender name="springFile" class="org.apache.log4j.DailyRollingFileAppender">
    	<!-- Local or Real Windows  -->
        <param name="File" value="C:/LOG/dalim/spring.log"/>
        <param name="Append" value="true"/>
        <!-- param name="MaxFileSize" value="100MB"/ -->
        <!-- param name="MaxBackupIndex" value="2"></param -->
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p [%C{10}] %m [%X{userId}]%n" />
        </layout>  
    </appender>
     
     <!-- By Date Log File Create(Error) --> 
    <appender name="errFile" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="Threshold" value="ERROR"/>
        
        <!-- Local or Real Windows  -->
        <param name="File" value="C:/LOG/dalim/error.log"/>
        <param name="Append" value="true"/>
        <!-- param name="MaxFileSize" value="100MB"/ -->
        <!-- param name="MaxBackupIndex" value="2"></param -->
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %5p [%C{1}] %m [%X{userId}]%n" />
        </layout>  
    </appender>
     
    <logger name="org.apache.ibatis">
        <level value="DEBUG"/>
    </logger>
    <logger name="org.springframework">
        <level value="DEBUG"/>
        <appender-ref ref="springFile" />
    </logger>
    <!-- 
    	log4j slf4j 21-01-28-
    -->
    <logger name="java.sql">
        <level value="DEBUG"/>
    </logger>
    
	<logger name="jdbc.sqlonly">
		<level value="DEBUG" />
	</logger>

	<logger name="jdbc.sqltiming">
		<level value="OFF" />
	</logger>

	<logger name="jdbc.audit">
		<level value="OFF" />
	</logger>

	<logger name="jdbc.resultset">
		<level value="ERROR" />
	</logger>

	<logger name="jdbc.resultsettable">
		<level value="DEBUG" />
	</logger>

	<logger name="jdbc.connection">
		<level value="ERROR" />
	</logger>
    <!-- 
    	log4j slf4j 21-01-28-
    -->
    <root>
        <level value="DEBUG" />
        <appender-ref ref="console" />
        <appender-ref ref="errFile"/>
        <appender-ref ref="rollingFile"/>
    </root>
	
</log4j:configuration>
